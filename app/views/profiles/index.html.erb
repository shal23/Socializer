<h1>Listing profiles</h1>

<table class = 'table'>
  <tr>
    <th>Name</th>
    <th>About</th>
    <th>Hobbies</th>
    <th>Job</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.about %></td>
    <td><%= profile.hobbies %></td>
    <td><%= profile.job %></td>
    <td><%= profile.user %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

